<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MyClothingShop</title>
	<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>
	<header class="main-header">
		<nav class="nav-container">
			<div class="logo">
				<h1>МоденСвят</h1>
			</div>
			<ul class="nav-links">
				<li><a href="index.html">Начало</a></li>
				<li class="nav-item">
					<a class="nav-link text-dark" asp-area="" asp-controller="ClothingItems" asp-action="Index">Материали</a>
				</li>
			</ul>
			<div class="nav-icons">
				<a href="#" class="search-icon">🔍</a>
				<a href="#" class="cart-icon">🛒</a>
				<a href="#" class="user-icon">👤</a>
			</div>
			<div>
				<partial name="_LoginPartial" />
			</div>
		</nav>
	</header>
	<main class="main-content">
		@RenderBody()
	</main>

	<footer class="main-footer">
		<div class="footer-content">
			<div class="footer-section">
				<h3>За нас</h3>
				<ul>
					<li><a href="#">За компанията</a></li>
					<li><a href="#">Контакти</a></li>
					<li><a href="#">Кариери</a></li>
				</ul>
			</div>
			<div class="footer-section">
				<h3>Обслужване на клиенти</h3>
				<ul>
					<li><a href="#">Доставка</a></li>
					<li><a href="#">Връщане</a></li>
					<li><a href="#">Размери</a></li>
				</ul>
			</div>
			<div class="footer-section">
				<h3>Последвайте ни</h3>
				<div class="social-links">
					<a href="#">Facebook</a>
					<a href="#">Instagram</a>
					<a href="#">Twitter</a>
				</div>
			</div>
		</div>
	</footer>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
